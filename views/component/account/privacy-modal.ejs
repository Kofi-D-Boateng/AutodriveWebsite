<div class="cold-sm-12 mt-5 pb-3">
  <div class="Account-settings">
    <div class="user-info-title">
      <h1 class="h5"><i class="fas fa-cogs"></i> Account Settings</h1>
    </div>
    <div class="Account-privacy mt-4 pt-4">
      <div class="privacy-title mb-3">
        <h1 class="h6"><i class="fas fa-user-secret"></i> Account Privacy</h1>
      </div>
      <div class="cookies-modal mb-5 pb-2">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-dark btn-sm"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Privacy
        </button>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Account Privacy
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <p>I WILL APPEND COOKIES/SESSION DISABLING BUTTONS HERE</p>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary btn-sm"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" class="btn btn-primary btn-sm">
                  Save changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
