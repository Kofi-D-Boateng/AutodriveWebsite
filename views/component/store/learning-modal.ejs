<button
  type="button"
  class="btn btn-success"
  data-bs-toggle="modal"
  data-bs-target="#mlBackdrop"
>
  Get Started
</button>
<!-- Modal -->
<div
  class="modal fade"
  id="mlBackdrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          Machine Learning Purchase
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/" method="POST">
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="flexCheckIndeterminate"
            />
            <label class="form-check-label" for="flexCheckIndeterminate">
              Machine Learning Package
            </label>
          </div>
          <br />
          <br />
          <br />
          <div class="form-check mb-3">
            <label class="form-label fs-7" for="regions">Region*</label>
            <select
              class="form-select regions"
              aria-label="Default select example"
              required
            >
              <option selected>United States</option>
              <option value="1">Canada</option>
              <option value="2">Europe</option>
              <option value="3">Japan</option>
            </select>
          </div>
          <div class="form-check mb-3">
            <label class="form-label fs-6" for="flexCheckIndeterminate"
              >Full Name*</label
            >
            <input
              class="form-control form-control-sm"
              type="text"
              value=""
              id="flexCheckIndeterminate"
              required
            />
          </div>
          <div class="form-check mb-3">
            <label class="form-label fs-6" for="flexCheckIndeterminate"
              >Email*</label
            >
            <input
              class="form-control form-control-sm"
              type="email"
              value=""
              id="flexCheckIndeterminate"
              required
            />
          </div>
          <div class="form-check mb-3">
            <label class="form-label fs-7" for="flexCheckIndeterminate"
              >Company*</label
            >
            <input
              class="form-control form-control-sm"
              type="text"
              value=""
              id="flexCheckIndeterminate"
              required
            />
          </div>
          <div class="form-check">
            <label class="form-label fs-6" for="flexCheckIndeterminate"
              >Phone*</label
            >
            <input
              class="form-control form-control-sm"
              type="tel"
              value=""
              id="flexCheckIndeterminate"
              required
            />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-success" onClick="">Accept</button>
      </div>
    </div>
  </div>
</div>
